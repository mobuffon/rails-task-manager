<h1>My Task List</h1>
<% @tasks.each do |task| %>
  <div>
  <input type="checkbox" id="scales" name="scales" <%= 'checked' if task.completed == true %>>
  <label for="scales"><%= link_to(task.title, task_path(task)) %></label>
  <!-- <i class="fas fa-trash-alt"></i> -->
<!-- <a data-confirm="Are you sure you want to delete this task?" rel="nofollow" data-method="destroy" href="/tasks"><i class="fas fa-trash-alt"></i></a> -->
<%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this task?" } %>
</div>
<% end %>
<p></p>
<%= link_to("create new task", new_path) %>


